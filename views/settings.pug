extends ./layout/index
block content
    .container.d-flex.justify-content-center.align-items-center.flex-column.my-5.custom-h
        .card.text-center.w-50#loginCard 
            .card-header
                span.fw-semibold Edit Information
            .card-body
                form(action="/update" method="POST") 
                    span.text-sm.text-secondary.fst-italic * Click any field to edit the value and then hit save *
                    .input-group.mb-3.shadow.rounded.my-4
                        span.input-group-text.iconSpan 
                            svg.icon.icon-tabler.icon-tabler-user(xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewbox='0 0 24 24' stroke-width='1.5' stroke='#3f83f8' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                path(d='M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0')
                                path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                        input#name.form-control.text-center.fw-semibold.customInput(type='text' placeholder=user.name name="name")      
                    .input-group.mb-3.shadow.rounded.my-4
                        span.input-group-text.iconSpan 
                            svg.icon.icon-tabler.icon-tabler-mail(xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewbox='0 0 24 24' stroke-width='1.5' stroke='#3f83f8' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                path(d='M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z')
                                path(d='M3 7l9 6l9 -6')
                        input#email.form-control.text-center.fw-semibold.customInput(type='email' placeholder=user.email name="email")                       
                    .input-group.mb-3.shadow.rounded.my-4
                        span.input-group-text.iconSpan 
                            svg.icon.icon-tabler.icon-tabler-phone(xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewbox='0 0 24 24' stroke-width='1.5' stroke='#3f83f8' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                path(d='M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2')
                        input#phone.form-control.text-center.fw-semibold.customInput(type='tel' placeholder=user.phone name="phone")
                    button.btn.btn-outline-primary.my-4(type="submit") Save
            if(settingsMsg)
                .card-footer.text-center.px-5
                        .alert.mt-3(class=`alert-${settingsMsg.type}`)=settingsMsg.text